<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
      <bean id="India" class="com.cognizant.spring_learn.DataController.Country">

          <constructor-arg name="name" value="India"></constructor-arg>
          <constructor-arg name="code" value="IND"></constructor-arg>

      </bean>
    <bean id="countryList" class="java.util.ArrayList">
        <constructor-arg>
            <list>

                <bean class="com.cognizant.spring_learn.DataController.Country">
                    <constructor-arg name="name" value="India"/>
                    <constructor-arg name="code" value="IND"/>

                </bean>
                <bean class="com.cognizant.spring_learn.DataController.Country">
                    <constructor-arg name="name" value="United States"/>
                    <constructor-arg name="code" value="US"/>

                </bean>
                <bean class="com.cognizant.spring_learn.DataController.Country">
                    <constructor-arg name="name" value="Russia"/>
                    <constructor-arg name="code" value="RUS"/>

                </bean>
                <bean class="com.cognizant.spring_learn.DataController.Country">
                    <constructor-arg name="name" value="China"/>
                    <constructor-arg name="code" value="CH"/>

                </bean>
            </list>

        </constructor-arg>



    </bean>

    <!-- bea n definitions here -->

</beans>
